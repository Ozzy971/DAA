def fibonacci_series(n):
    fib = [0, 1]  # Starting two numbers
    for i in range(2, n):
        fib.append(fib[i-1] + fib[i-2])
    return fib[:n]

n_terms = int(input("Enter number of terms: "))

if n_terms <= 0:
    print("Please enter a positive integer.")
else:
    series = fibonacci_series(n_terms)
    print(f"Fibonacci series for {n_terms} terms:")
    print(series)
